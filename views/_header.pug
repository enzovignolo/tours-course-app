header.header 
            nav.nav.nav--tours
                a(href='/').nav__el All tours
                //form.nav__search
                    button.nav__search-btn
                        svg
                            user(xlink:href='img/icons.svg#icon-search')
                    input(type='text' placeholder='Search tours').nav__search-input
            .header__logo
                img(src='/img/logo-white.png' alt='Natours logo')

            nav.nav.nav--user
                if user
                    a.nav__el.nav__el--logout Log Out
                    a.nav__el(href="/me")
                        img(src=`/img/users/${user.photo}` alt="User photo").nav__user-img
                        span=user.name.split(' ')[0]
                else
                    a(href="/login").nav__el Log In
                    a.nav__el.nav__el--cta Sign Up